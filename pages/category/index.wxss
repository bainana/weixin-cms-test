/* pages/category/index.wxss */
.tab{
  width: 100%;
  height: 100rpx;
}
.tab-title{
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  background: #fff;
}
.tab-title-item{
  flex: 1;
  height: 100rpx;
  text-align: center;
  border-bottom: 2px solid #ccc;
}
.tab-title .active{
  border-bottom: green 2px solid
}
.tab-content{
  margin-top: 100rpx;
  width: 100%;
  overflow: hidden;
  padding: 10rpx;
}
.tab-article{
  width: 100%;
  height: 160rpx;
  padding: 10rpx 0;
  overflow: hidden
}
.tab-article .pic{
  float: left;
  width: 180rpx;
}
.tab-article .detail{
  padding-left: 180rpx;
  padding-right: 10rpx;
}
.tab-article .pic image{
  width: 160rpx;
  height: 160rpx;
}
.tab-article .article-title{
  padding: 5px 0;
  height: 50rpx;
  width: 100%;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.tab-article .article-desc{
  height: 70rpx;
  font-size: 12px;
  color: #ccc
}
/* pages/category/index.wxss */
.tab{
  width: 100%;
  height: 100rpx;
}
.tab-title{
  display: flex;
  height: 100rpx;
}
.tab-title-item{
  flex: 1;
  height: 100rpx;
  text-align: center;
  border-bottom: 2px solid #ccc;
}
.tab-title .active{
  border-bottom: green 2px solid
}
.tab-content{
  width: 100%;
  overflow: hidden
}
.tab-article{
  width: 100%;
  height: 200rpx;
}
.tab-article .pic{
  float: left;
  width: 200rpx;
}
.tab-article .title{
  font-size: 12px;
}